<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="13*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="processesDG" SelectionMode="Single" AutoGenerateColumns="False" SelectedCellsChanged="ProcessesDGSelectedCellsChanged" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="100"/>
                <DataGridTextColumn Header="Name" Binding="{Binding ProcessName}" Width="450"/>
                <DataGridTextColumn Header="Priority" Binding="{Binding BasePriority}" Width="450"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="openProcessBtn" Click="openProcessBtnClick" Content="Открыть процесс" Background="Beige" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Width="800" Height="31"/>
        
    </Grid>
</Window>
